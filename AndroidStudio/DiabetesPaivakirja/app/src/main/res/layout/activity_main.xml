<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">


    <Button
        android:id="@+id/Send_Arvo"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:focusable="false"
        android:fontFamily="@font/arvo"
        android:onClick="onButtonPressed_Lisaa"
        android:text="@string/main_lisaa_verensokeriarvo"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFEFE"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo"
        android:text="@string/main_paivamaara"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFEFE"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/paivamaaraView"
        app:layout_constraintEnd_toEndOf="@+id/paivamaaraView"
        app:layout_constraintStart_toStartOf="@+id/paivamaaraView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

    <EditText
        android:id="@+id/paivamaaraView"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:autofillHints="nul"
        android:background="@drawable/text"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/arvo"
        android:gravity="center"
        android:hint="@string/main_paivamaara"
        android:inputType="none"
        android:textColor="#FFFEFE"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.429" />

    <EditText
        android:id="@+id/aikaView"
        android:layout_width="135dp"
        android:layout_height="34dp"
        android:autofillHints="nul"
        android:background="@drawable/text"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/arvo"
        android:gravity="center"
        android:hint="@string/main_aika"
        android:inputType="none"
        android:textColor="#FFFEFE"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558" />

    <EditText
        android:id="@+id/arvoView"
        android:layout_width="135dp"
        android:layout_height="34dp"
        android:autofillHints="nul"
        android:background="@drawable/text"
        android:ems="10"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:hint="@string/nul"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:textColor="#FFFEFE"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo"
        android:text="@string/main_arvo"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFEFE"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/arvoView"
        app:layout_constraintEnd_toEndOf="@+id/arvoView"
        app:layout_constraintStart_toStartOf="@+id/arvoView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo"
        android:text="@string/main_aika"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFEFE"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/aikaView"
        app:layout_constraintEnd_toEndOf="@+id/aikaView"
        app:layout_constraintStart_toStartOf="@+id/aikaView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <TextView
        android:id="@+id/yearView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo"
        android:gravity="center"
        android:text="@string/main_nimi"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:background="@drawable/settings"
        android:onClick="onButtonPressed_Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <Button
        android:id="@+id/Navi_Button"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:background="@drawable/diagram"
        android:onClick="onButtonPressed_Arvo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

</androidx.constraintlayout.widget.ConstraintLayout>